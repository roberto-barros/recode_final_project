<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".views.department.DepartmentUpdateActivity">

    <TextView
        android:id="@+id/tvIdCreate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ID"
        android:textSize="25dp"
        android:layout_marginLeft="50dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/edNewDepartment"
        app:layout_constraintTop_toTopOf="@id/edNewDepartment"
        app:layout_constraintBottom_toBottomOf="@id/edNewDepartment"

        />

    <EditText
        android:id="@+id/edNewDepartment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Novo Departamento"
        android:textSize="25dp"
        android:gravity="center"
        android:layout_marginRight="50dp"
        app:layout_constraintStart_toEndOf="@id/tvIdCreate"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/btSaveDepartment"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintVertical_chainStyle="packed"
        />

    <Button
        android:id="@+id/btSaveDepartment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SALVAR"
        android:textSize="25dp"
        app:layout_constraintTop_toBottomOf="@id/edNewDepartment"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"

        />


</androidx.constraintlayout.widget.ConstraintLayout>
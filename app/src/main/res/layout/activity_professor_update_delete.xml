<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".views.professor.ProfessorUpdateDeleteActivity">

    <EditText
        android:id="@+id/edProfessorId"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="ID Professor"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/edProfessorName"
        app:layout_constraintVertical_chainStyle="packed"
        />

    <EditText
        android:id="@+id/edProfessorName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Nome Professor"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        app:layout_constraintTop_toBottomOf="@id/edProfessorId"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/edCpfProfessor"

        />

    <EditText
        android:id="@+id/edCpfProfessor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="CPF Professor"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        app:layout_constraintTop_toBottomOf="@id/edProfessorName"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/edDepProfessor"
        />

    <EditText
        android:id="@+id/edDepProfessor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Departamento Associado"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        app:layout_constraintTop_toBottomOf="@id/edCpfProfessor"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/btSaveProf"
        />

    <Button
        android:id="@+id/btSaveProf"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SALVAR"
        android:backgroundTint="#008037"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/btDeleteProf"
        android:layout_marginBottom="50dp"
        android:onClick="updateDepartment"
        />

    <Button
        android:id="@+id/btDeleteProf"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="APAGAR"
        android:backgroundTint="#ff1616"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/btSaveProf"
        android:layout_marginBottom="50dp"
        android:onClick="deleteProfessor"
        />
</androidx.constraintlayout.widget.ConstraintLayout>